<h2>Sign In</h2>

<%= form_tag('/sessions', method: 'post') do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= email_field :email, nil, placeholder: 'Email Address' %>
  </div>
  <div class="field">
    <%= label_tag :'password' %><br>
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
  </div>
  <div class="actions">
    <%= submit_tag :'Sign In' %>
  </div>
<% end %>
